                <td>
                    @item.City
                </td>
                <td>
                    @item.State
                </td>
                <td>
                    @item.ZipCode
                </td>
                <td>
                    @*@if (item.ZoneNumber != null)
                    {
                        @item.ZoneNumber
                    }*@
                </td>
                <td>
                    @item.CreatorId
                </td>
                <td>
                @item.DayOfAppointment
                   
                </td>
                <td>
                    
                    @Html.ActionLink("View Profile", "Profile", new { item.ParentLeadId}) |
                    @Html.ActionLink("Reschedule", "AppointmentSheet", new { item.ParentLeadId })
                   
