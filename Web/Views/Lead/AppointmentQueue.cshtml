            <th>
            
            </th>
    </thead>
    <tbody>
        @foreach (var item in Model.AppointmentQueue)
        {
            <tr>
                 <td>
                     @Html.CheckBox("chkediting" + @item.AppointmentSheetId, new { @class = "chkediting"})
                      
