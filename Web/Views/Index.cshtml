@model IEnumerable<Data.Domain.Account>

@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

<link href="@Url.Content("~/Content/demo_table.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/demo_page.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/demo_table_jui.css")" rel="stylesheet" type="text/css" />
<script src = "@Url.Content("~/Scripts/jquery.dataTables.js")" type="text/javascript"></script>
<script src = "@Url.Content("~/Scripts/jquery.jeditable.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#AccountsTable').dataTable();
    });
</script>

@*<script type = "text/javascript">
    $(document).ready(function () {
        $('.editing').editable('http://localhost:58647')
    })</script>*@

<div class="container">
<div class="header">

    <img border="0" src="../../Content/images/banner.png" alt="alt" /></div>
<div style="margin-top:150px;">
<h2>List of Accounts</h2>

<p>
    @Html.ActionLink("Create Account", "Create")
</p>

<table id = "AccountsTable" class="accountstable">
<thead>
    <tr >
       
        <th>
            Account Name
        </th>
        <th>
            Merchant ID
        </th>
        <th>
            Account Status
        </th>
        <th>
            Sales Agent
        </th>
        <th>
            Approval Date
        </th>
         <th style="width:60px"></th>
        <th style="width:60px"></th>
        <th style="width:60px"></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
       
        <td>
            @item.AccountName
        </td>
        <td>
            @item.MerchantId
        </td>
        <td>
            @item.Status
        </td>
        <td>
            @item.AssignedSalesRep
        </td>
       
        <td>
            @String.Format("{0:g}", item.AccountApprovalDate)
        </td>
         <td>
            @Html.ActionLink("Edit", "Edit", new {item.AccountId }) |
            </td><td>
            @Html.ActionLink("Details", "Details", new {item.AccountId}) |
            </td><td>
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) |
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>